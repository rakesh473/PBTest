@model PBSqlite.Models.Player

<form id="create-form" method="post" asp-page="Admin" asp-page-handler="CreateOrEdit" onsubmit="return jQueryModalPost(this);">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">PlayerID</label>
        <div class="col-sm-5">
            <input type="number" autocomplete="off" asp-for="Id" name="id" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-5">
            <input type="text" autocomplete="off" asp-for="Name" name="name" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">BuyIns</label>
        <div class="col-sm-5">
            <input type="number" autocomplete="off" asp-for="BuyIns" name="buyins" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Close</label>
        <div class="col-sm-5">
            <input type="number" autocomplete="off" asp-for="Close" name="close" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Total</label>
        <div class="col-sm-5">
            <input type="number" autocomplete="off" asp-for="Total" name="total" class="form-control"/>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"> Cancel</button>
        <button type="submit" class="btn btn-primary"> Save</button>
    </div>
</form>